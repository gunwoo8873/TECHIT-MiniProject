        <script>

            $(window).on('load', function () {

                // 공지사항 작성
                $('#form-create-notice').submit(function (event) {
                    event.preventDefault();

                    var formData = new FormData(this);
                    $.ajax({
                        url: '/api/notice',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (body) {
                            console.log(body);
                            alert('공지사항이 작성되었습니다.');
                            loadNotice();
                        },
                    });
                });

                let loadNotice = () => {
                    // 공지사항 불러오기
                    $.ajax({
                        url: '/api/notice',
                        type: 'GET',
                        success: function (body) {
                            console.log(body);

                            let data = body.data
                            var table = $('#notice-table tbody');
                            // for (var i = 0; i < data.length; i++) {
                            //     var row = $('<tr>');
                            //     row.append($('<th>').text(data[i].notice_id));
                            //     row.append($('<td>').text(data[i].title));
                            //     row.append($('<td>').text(data[i].created.substring(0, 10)));
                            //     table.append(row);
                            // }

                            // 테이블 초기화
                            table.html('');
                            // 공지사항 테이블에 클릭하면 페이지 이동하도록 추가
                            for (var i = 0; i < data.length; i++) {
                                var row = $('<tr>');
                                row.append($('<th>').text(data[i].notice_id));
                                row.append($('<td>').html(`<a href="/notice/${data[i].notice_id}">${data[i].title}</a>`));
                                row.append($('<td>').text(data[i].created.substring(0, 10)));
                                table.append(row);
                            }
                        }
                    });
                }
                loadNotice();


                // 이미지 추가
                $('#image-add-button').click(() => {
                    $('#image-input').click();
                });

                // 이미지 미리보기
                $('#image-input').change((event) => {
                    const files = event.target.files;
                    const preview = $('#image-preview');
                    preview.html(''); // Clear previous previews

                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const reader = new FileReader();

                        reader.onload = (e) => {
                            const div = $('<div style="position: relative; display: inline-block;">');
                            const img = $('<img>');
                            img.attr('src', e.target.result);
                            // 이미지 우측 상단에 빨간색 제거 버튼
                            const button = $('<button class="btn btn-danger btn-sm" style="position: absolute; right: 0; top: 0;">');
                            button.text('삭제');
                            button.click(() => {
                                div.remove();
                            });
                            div.append(img);
                            div.append(button);
                            preview.append(div);
                        };

                        reader.readAsDataURL(file);
                    }
                });

                // 파일 추가
                $('#file-add-button').click(() => {
                    $('#file-input').click();
                });

                // 파일 미리보기
                $('#file-input').change((event) => {
                    const files = event.target.files;
                    const preview = $('#file-preview');
                    preview.html(''); // Clear previous previews

                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const reader = new FileReader();

                        reader.onload = (e) => {
                            // span 태그로 파일명 표시 (제거 버튼 포함)
                            const span = $('<span>');
                            span.text(file.name);
                            // 빨간색 제거 버튼
                            const button = $('<button class="btn btn-danger btn-sm" style="margin-left: 10px;" >');
                            button.text('삭제');
                            button.click(() => {
                                span.remove();
                            });
                            span.append(button);
                            preview.append(span);
                        };

                        reader.readAsDataURL(file);
                    }
                });
            });
        </script>
